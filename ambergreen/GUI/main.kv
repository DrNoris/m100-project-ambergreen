<LoginScreen>:
    canvas.before:
        Color:
            rgba: 0.921, 0.921, 0.921, 1  # Solid white background
        Rectangle:
            pos: self.pos
            size: self.size

    canvas:
        Color:
            rgba: 0.847, 0.847, 0.847, 1
        Rectangle:
            pos: [self.width * 0.1, self.height * 0.1]
            size: [self.width * 0.35, self.height * 0.8]

    # Add a Label for the text
    Label:
        text: "Login"
        size_hint: None, None
        font_name: "Roboto-Bold"
        size: [root.width * 0.35, root.height * 0.8]  # Avoid self if not valid here
        pos: [root.width * 0.1, root.height * 0.42]
        font_size: root.width * 0.08
        color: 0, 0, 0, 1
        halign: "center"
        valign: "middle"
        text_size: self.size

    Label:
        text: "E-mail"
        size_hint: None, None
        font_name: "Roboto-Bold"
        size: [root.width * 0.15, root.height * 0.5]
        pos: [root.width * 0.1, root.height * 0.42]
        font_size: root.width * 0.03
        color: 0, 0, 0, 1
        halign: "center"
        valign: "middle"

    TextInput:
        id: email_input
        size_hint: None, None
        size: [root.width * 0.29, root.height * 0.05]
        pos: [root.width * 0.13, root.height * 0.59]
        multiline: False
        background_normal: ''  # No default background
        background_color: (0, 0, 0, 0.34)  # Optional: to style the background color



    Label:
        text: "Password"
        size_hint: None, None
        font_name: "Roboto-Bold"
        size: [root.width * 0.15, root.height * 0.5]
        pos: [root.width * 0.12, root.height * 0.25]
        font_size: root.width * 0.03
        color: 0, 0, 0, 1


    TextInput:
        id: password_input
        size_hint: None, None
        size: [root.width * 0.29, root.height * 0.05]
        pos: [root.width * 0.13, root.height * 0.42]
        multiline: False
        password: True  # Hide the input characters (display as dots/asterisks)
        background_color: (0, 0, 0, 0.34)  # Optional: to style the background color

    Button:
        text: "Login"
        size_hint: None, None
        size: [root.width * 0.29, root.height * 0.08]
        pos: [root.width * 0.13, root.height * 0.29]
        background_normal: ''
        background_color: (0, 0.749, 0.388, 1)
        color: 1, 1, 1, 1
        font_size: root.height * 0.05
        on_press: root.on_login()

    Button:
        text: "Guest"
        size_hint: None, None
        size: [root.width * 0.29, root.height * 0.08]
        pos: [root.width * 0.13, root.height * 0.16]
        background_normal: ''  # Remove default background image
        background_color: (1, 1, 1, 1)  # Set background to white
        color: 0, 0, 0, 1  # Set text color to black for contrast
        font_size: root.height * 0.05
        border: [4, 4, 4, 4]  # Border width (this is optional)
        canvas.before:
            Color:
                rgba: 0, 0.749, 0.388, 1  # Green color for the border
            Line:
                width: 4  # Border thickness
                rectangle: (self.x, self.y, self.width, self.height)  # Rectangle shape of the button
        on_press: root.guest_login()  # Call on_press event handler in Python


    Image:
        id: logo_image
        source: 'Media/logo.png'
        size_hint: None, None
        width: root.width * 0.35
        height: self.width * (self.texture_size[1] / self.texture_size[0])  # Adjust height based on aspect ratio
        pos: [root.width * 0.60, root.height * 0.1 + (root.height * 0.8 - self.height) / 2]  # Center vertically

