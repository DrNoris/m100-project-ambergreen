                    font_name: "Roboto"
                    font_size: root.width * 0.03
                    halign: 'center'
                    valign: 'middle'
                    color: 1, 1, 1, 1

            BoxLayout:
                orientation: 'horizontal'
                size_hint: None, None
                height: root.height * 0.1  # Adjust per row height
                width: root.width * 0.8
                spacing: root.width * 0.1

                Image:
                    id: electricityIcon
